#include <stdio.h>

int main() {
    float valorCompra, valorVenda, lucro;
    
    printf("Digite o valor da compra: ");
    scanf("%f", &valorCompra);
    
    if (valorCompra < 20.00) {
        lucro = valorCompra * 0.45;
    } else {
        lucro = valorCompra * 0.30;
    }
    
    valorVenda = valorCompra + lucro;
    
    printf("Valor da venda: %.2f\n", valorVenda);
    
    return 0;
}
